<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

    <Button
        android:id="@+id/btnShowPatrons"
        android:layout_width="fill_parent"
        android:layout_height="20dip"
        android:layout_marginTop="5dip"
        android:background="@null"
        android:onClick="showPatrons"
        android:text="@string/patrons"
        android:textColor="#228b22"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnInsertPatrons"
        android:layout_width="fill_parent"
        android:layout_height="20dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnStartSync"
        android:layout_marginTop="44dp"
        android:background="@null"
        android:onClick="insertPatrons"
        android:text="@string/insert_patrons"
        android:textColor="#228b22"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnStartSync"
        android:layout_width="fill_parent"
        android:layout_height="20dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnShowPatrons"
        android:layout_marginTop="39dp"
        android:background="@null"
        android:onClick="startSync"
        android:text="@string/syncronize"
        android:textColor="#228b22"
        android:textStyle="bold" />

</RelativeLayout>